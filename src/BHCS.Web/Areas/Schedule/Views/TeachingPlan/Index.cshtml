@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "制定教学计划";
}
@section styles{
    <link href="/theme/gentelella/vendors/select2/dist/css/select2.css" rel="stylesheet" />
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>制定教学计划 </h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="请输入查询条件">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">查询</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>教学计划管理 <small>Teaching plan list</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a id="bhcs-schedule-teachingplan-add-btn" data-toggle="modal" data-target=".bhcs-schedule-teachingplan-add-modal"><i class="fa fa-plus"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">


                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action bhcs-schedule-teachingplan-list">
                                <thead>
                                    <tr class="headings">
                                        <th>
                                            <input type="checkbox" id="check-all" class="flat">
                                        </th>
                                        <th class="column-title">学期名 </th>
                                        <th class="column-title">专业 </th>
                                        <th class="column-title">年级 </th>
                                        <th class="column-title">所含课程数 </th>
                                        <th class="column-title">备注 </th>
                                        <th class="column-title">是否确认教学计划 </th>
                                        <th class="column-title">创建人/创建时间 </th>
                                        <th class="column-title">更新人/更新时间 </th>
                                        <th class="column-title">操作 </th>
                                        <th class="bulk-actions" colspan="10">
                                            <a class="antoo" style="color:#fff; font-weight:500;">操作 ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                </thead>

                                <tbody></tbody>
                            </table>
                            <div class="col-lg-12 datapager">
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="modal fade bhcs-schedule-teachingplan-add-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form class="form-horizontal  form-label-left bhcs-schedule-teachingplan-add-form" data-parsley-validate="validate">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">新增教学计划</h4>
                    </div>
                    <div class="modal-body">
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Semester">
                                学期名 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control col-md-7 col-xs-12"
                                       data-parsley-required="true"
                                       data-parsley-required-message="学期名不能为空" name="Semester" placeholder="请输入学期名" required="required" type="text">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="MajorId">
                                专业 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class="form-control major-select" name="MajorId" data-parsley-required="true" data-parsley-required-message="请选择专业" placeholder="请选择专业"></select>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="GradeId">
                                年级 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class="form-control grade-select" name="GradeId" data-parsley-required="true" data-parsley-required-message="请选择年级" placeholder="请选择年级"></select>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="CourseIds">
                                课程 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class="form-course" multiple="multiple" 
                                        style="width: 100%" name="CourseIds"></select>
                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Reamrk">
                                备注 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <textarea class="form-control col-md-7 col-xs-12" name="Reamrk" cols="5" rows="5" placeholder="请输入备注" type="text"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="submit" class="btn btn-primary bhcs-schedule-teachingplan-add-btn-save">保存</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="/theme/gentelella/vendors/select2/dist/js/select2.js"></script>
    <script>
        $(function () {
            var $course = $('.bhcs-schedule-teachingplan-add-form').find('.form-course');
            var $form = $('.bhcs-schedule-teachingplan-add-form');

            $form.parsley().on('form:submit', function () {
                var courseIds='';
                $('.form-course').find(':selected').each(function () {
                    courseIds += $(this).val() + ',';
                });
                courseIds = courseIds.substring(0, courseIds.length - 1);

                var formData = $(".bhcs-schedule-teachingplan-add-form").serialize();
                console.log(formData);
                $.ajax({
                    url: '@Url.Action("CreateNewTeachingPlan")',
                    data: formData + "&courseIds=" + courseIds,
                    dataType: 'json',
                    type: 'post',
                    success: function (data) {
                        if (data.state) {
                            PNotifySuccess(data.message);
                            $('.bhcs-schedule-teachingplan-add-modal').modal('hide');
                            reloadingData();
                        }
                        else {
                            PNotifyError(data.message);
                        }

                        return false;
                    },
                    error: function () {
                        PNotifyError('网络错误');
                        return false;
                    }
                })
                return false;
            });



            initalizeTable();
            function initalizeTable() {
                _tableData.tableClassName = 'bhcs-schedule-teachingplan-list';
                _tableData.columnCount = 11;
                _tableData.url = '@Url.Action("GetTeachingPlanPage")';
                _tableData.renderCallback = function (item) {
                    var isAcceptStr = "未确认";
                    var operationHtml = '';
                    if (item.isAccept) {
                        isAcceptStr = "已确认";
                    } else {
                        operationHtml = '<a href="@Url.Action("AcceptCourse")?planId=' + item.planId + '" class="btn btn-primary btn-xs">确认教学计划</a>';
                    }

                    return '<td class="a-center "> <input type="checkbox" class="item-flat" name="table_records"></td> ' +
                        '<td class="">' + item.semester + '</td>' +
                        '<td class="">' + item.majorName + '</td>' +
                        '<td class="">' + item.gradeName + '</td>' +
                        '<td class="">' + item.majorName + '</td>' +
                        '<td class="">' + item.remark + '</td>' +
                        '<td class="">' + isAcceptStr + '</td>' +
                        '<td class="">' + item.createByName + '<br>' + item.createTimeStr + '</td>' +
                        '<td class="">' + item.updateByName + '<br>' + item.updateTimeStr + '</td>' +
                        '<td class="last">' + operationHtml+'</td>';
                };
                loadingData();
            }

            $('.bhcs-schedule-teachingplan-add-modal').on('show.bs.modal', function () {
                $.get('@Url.Action("GetGradeList","common",new { area=""})', function (data) {
                    var $gradeSelect = $('.grade-select');
                    $gradeSelect.html('');
                    for (i = 0; i < data.length; i++) {
                        $gradeSelect.append('<option value="' + data[i].gradeId + '">' + data[i].name + '</option>')
                    };
                });
                $.get('@Url.Action("GetMajorList", "common", new { area = "" })', function (data) {
                    var $majorSelect = $('.major-select');
                    $majorSelect.html('');
                    for (i = 0; i < data.length; i++) {
                        $majorSelect.append('<option value="' + data[i].majorId + '">' + data[i].name + '</option>')
                    };
                });
                $course.select2({
                     width: 'resolve',// need to override the changed default
                    ajax: {
                        url: '@Url.Action("GetCoursePage","Course",new { area="System"})',
                        delay: 2000 ,
                        data: function (params) {
                            var query = {
                                pageIndex: params.page || 1,
                                pageSize:10
                            }

                            // Query parameters will be ?search=[term]&page=[page]
                            return query;
                        },
                        processResults: function (data) {
                            var result = {results:[]};
                            for (i = 0; i < data.data.length; i++){
                                var item = data.data[i];
                                result.results[i]= {
                                    id: item.courseId,
                                    text: item.name
                                };
                            }
                            console.log(result);
                            // Tranforms the top-level key of the response object from 'items' to 'results'
                            return result;
                        }
                    }
                });
            });
        });
    </script>
}