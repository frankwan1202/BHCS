@model IPaged<TeacherReadModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "教师管理";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>教师管理 </h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="请输入查询条件">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">查询</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>教师列表 <small>Teacher list</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                            <li>
                                <a id="bhcs-system-teacher-add-btn" data-toggle="modal" data-target=".bhcs-system-teacher-add-modal"><i class="fa fa-plus"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">


                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action bhcs-system-teacher-list">
                                <thead>
                                    <tr class="headings">
                                        <th>
                                            <input type="checkbox" id="check-all" class="flat">
                                        </th>
                                        <th class="column-title">账号 </th>
                                        <th class="column-title">姓名 </th>
                                        <th class="column-title">专业 </th>
                                        <th class="column-title">邮箱/手机号 </th>
                                        <th class="column-title">所属角色 </th>
                                        <th class="column-title">创建人/创建时间 </th>
                                        <th class="column-title">更新人/更新时间 </th>
                                        <th class="column-title">状态 </th>
                                        <th class="column-title">操作 </th>
                                        </th>
                                        <th class="bulk-actions" colspan="9">
                                            <a class="antoo" style="color:#fff; font-weight:500;">操作 ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                </thead>

                                <tbody></tbody>
                            </table>
                            <div class="col-lg-12 datapager">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="modal fade bhcs-system-teacher-add-modal" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form class="form-horizontal  form-label-left bhcs-system-teacher-add-form" data-parsley-validate="validate">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">×</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">新增教师</h4>
                    </div>
                    <div class="modal-body">
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                账号 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control col-md-7 col-xs-12"
                                       data-parsley-required="true"
                                       data-parsley-required-message="账号不能为空" name="account" placeholder="请输入账号" required="required" type="text">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                密码 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control col-md-7 col-xs-12"
                                       data-parsley-required="true"
                                       data-parsley-required-message="密码不能为空" name="password" placeholder="请输入密码" required="required" type="password">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                确认密码 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control col-md-7 col-xs-12" data-parsley-required="true"
                                       data-parsley-required-message="请再输入一次密码" name="RepeatPassword" placeholder="请输入密码" required="required" type="password">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                角色 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class="form-control role-select" name="RoleId" data-parsley-required="true" data-parsley-required-message="请选择角色" placeholder="请选择角色"></select>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                姓名 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control col-md-7 col-xs-12"
                                       data-parsley-required="true"
                                       data-parsley-required-message="姓名不能为空" name="UserName" placeholder="请输入姓名" required="required" type="text">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                专业 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select class="form-control major-select" name="MajorId" data-parsley-required="true" data-parsley-required-message="请选择专业" placeholder="请选择专业"></select>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                邮箱 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control col-md-7 col-xs-12"
                                       data-parsley-type="email"
                                       data-parsley-required="true"
                                       data-parsley-required-message="邮箱不能为空" name="Email" placeholder="请输入邮箱" required="required" type="text">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">
                                手机 <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input class="form-control col-md-7 col-xs-12"
                                       data-parsley-required="true"
                                       data-parsley-type="number"
                                       data-parsley-length="[11, 11]"
                                       data-parsley-required-message="手机不能为空" name="Mobile" placeholder="请输入手机" required="required" type="text">
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                        <button type="submit" class="btn btn-primary bhcs-system-teacher-add-btn-save">保存</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="/theme/gentelella/js/md5/jquery.md5.js"></script>
    <script>
        $(function () {
            $('.bhcs-system-teacher-add-form').parsley().on('form:submit', function () {
                var formData = $(".bhcs-system-teacher-add-form").serialize();

                $.ajax({
                    url: '@Url.Action("CreateNewTeacher")',
                    data: formData,
                    dataType: 'json',
                    type: 'post',
                    success: function (data) {
                        if (data.state) {
                            PNotifySuccess(data.message);
                            $('.bhcs-system-teacher-add-modal').modal('hide');
                            reloadingData();
                        }
                        else {
                            PNotifyError(data.message);
                        }

                        return false;
                    },
                    error: function () {
                        PNotifyError('网络错误');
                        return false;
                    }
                })
                return false;
            });

            initalizeTable();
            function initalizeTable() {
                _tableData.tableClassName = 'bhcs-system-teacher-list';
                _tableData.columnCount = 10;
                _tableData.url = '@Url.Action("GetTeacherList")';
                _tableData.renderCallback = function (item) {
                    return '<td class="a-center "> <input type="checkbox" class="item-flat" name="table_records"></td> ' +
                        '<td class="">' + item.account + '</td>' +
                        '<td class="">' + item.userName + '</td>' +
                        '<td class="">' + item.majorName + '</td>' +
                        '<td class="">' + item.email + '<br>' + item.mobile + '</td>' +
                        '<td class="">' + item.roleName + '</td>' +
                        '<td class="">' + item.createByName + '<br>' + item.createTimeStr + '</td>' +
                        '<td class="">' + item.updateByName + '<br>' + item.updateTimeStr + '</td>' +
                        '<td class="">' + item.stateStr + '</td>' +
                        '<td class="last"><a class="btn btn-xs btn-primary" href="#">查看课程</a></td>';
                };
                loadingData();
            }

            $('.bhcs-system-teacher-add-modal').on('show.bs.modal', function () {
                $.get('@Url.Action("GetRoleList","common",new { area=""})', function (data) {
                    var $roleSelect = $('.role-select');
                    $roleSelect.html('');
                    for (i = 0; i < data.length; i++) {
                        $roleSelect.append('<option value="' + data[i].roleId + '">' + data[i].roleName + '</option>')
                    };
                });
                 $.get('@Url.Action("GetMajorList")', function (data) {
                    var $majorSelect = $('.major-select');
                    $majorSelect.html('');
                    for (i = 0; i < data.length; i++) {
                        $majorSelect.append('<option value="' + data[i].majorId + '">' + data[i].name + '</option>')
                    };
                });
            });


        });
    </script>
}